{
  "name": "skills-and-resources-token-reader",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "check-updates": "npm-check-updates",
    "fix-install": "npm clean-install --ignore-scripts && npm install && npm rebuild",
    "postinstall": "patch-package",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest run",
    "test:hardware": "PCSC_TEST_HARDWARE=1 vitest run --reporter=verbose",
    "test:watch": "vitest",
    "format": "oxfmt"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@johntalton/ndef": "^1.0.3",
    "@mnasyrov/pubsub": "^0.2.4",
    "@pokusew/pcsclite": "github:pokusew/node-pcsclite#8100373ef05278b274250695577584fb161dec9b",
    "@tockawa/nfc-pcsc": "^0.9.3",
    "ink": "^6.7.0",
    "ink-select-input": "^6.2.0",
    "react": "^19.2.4",
    "tsx": "^4.21.0",
    "typed-emitter": "^2.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@types/ws": "^8.18.1",
    "npm-check-updates": "^19.3.2",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "patch-package": "^8.0.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.20.0 <21"
  }
}
